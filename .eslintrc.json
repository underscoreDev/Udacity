{
  "env": {
    "es2021": true,
    "node": true
  },
  "extends": ["google"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["@typescript-eslint"],
  "rules": {
    "new-cap": ["error", { "capIsNew": false }],
    "object-curly-spacing": ["error", "always"],
    "linebreak-style": ["error", "unix"],
    "max-len": ["error", { "code": 100, "tabWidth": 5, "ignoreComments": true }],
    "quotes": ["error", "double"]
  }
}
